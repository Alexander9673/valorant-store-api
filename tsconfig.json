{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./lib"
  },

  "include": [
    "./lib/data/*.json",
    "./lib/src/**/*.ts",
    "./lib/src/*.ts",
    "./lib/*"
  ]
}
